<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.yooncheolcommunity.api.user.dao.UserDao">

    <select id="findUserById" parameterType="String" resultType="kr.co.yooncheolcommunity.api.user.dto.User">
        SELECT * FROM YOONCHEOL_COMMUNITY.TB_USER WHERE USER_ID = #{userId}
    </select>

    <select id="findUser" parameterType="Object" resultType="kr.co.yooncheolcommunity.api.user.dto.User">
        SELECT * FROM YOONCHEOL_COMMUNITY.TB_USER WHERE USER_ID = #{userId} AND PASSWORD = #{password}
    </select>

</mapper>